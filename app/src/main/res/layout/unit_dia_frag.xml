<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#FFFFFF">

	<Button
		android:layout_height="40dp"
		android:layout_width="40dp"
		android:text="+"
		android:id="@+id/btn_add_unit"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_margin="1dp"
		android:background="#004A12"/>

	<EditText
		android:layout_height="wrap_content"
		android:layout_width="100dp"
		android:ems="10"
		android:layout_toRightOf="@id/btn_add_unit"
		android:layout_alignParentTop="true"
		android:layout_alignBottom="@id/btn_add_unit"
		android:id="@+id/e_add_unit"
		android:layout_margin="1dp"
		android:background="#303030"/>

	<ListView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@+id/btn_add_unit"
		android:layout_alignRight="@+id/e_add_unit"
		android:id="@+id/lv_unit_edit"
		android:layout_margin="1dp"
		android:background="#212121"/>

</RelativeLayout>

