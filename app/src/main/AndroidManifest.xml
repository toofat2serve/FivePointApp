<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.romaka.fivepointapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/FivePoint">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalActivity"
            android:label="Calibration"
            android:theme="@style/FivePoint" />

        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:theme="@style/FivePoint" />

        <activity
            android:name=".UnitEditActivity"
            android:label="Unit Editor"
            android:theme="@style/FivePoint" />

        <activity
            android:name=".HelpActivity"
            android:label="Help"
            android:theme="@style/FivePoint" />

        <activity
            android:name=".Contact"
            android:label="Contact"
            android:theme="@style/FivePoint" />

        <activity
            android:name=".DeviceGridActivity"
            android:label="Select Device"
            android:theme="@style/FivePoint" />

    </application>

</manifest>