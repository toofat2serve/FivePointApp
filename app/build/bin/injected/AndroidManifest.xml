<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.romaka.fivepointapp"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="21"
		android:targetSdkVersion="27"/>

	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name">

		<activity
			android:name=".MainActivity"
			android:label="@string/app_name"
			android:windowSoftInputMode="stateAlwaysHidden"
			android:theme="@style/FivePointDark">

			<intent-filter>

				<action
					android:name="android.intent.action.MAIN"/>

				<category
					android:name="android.intent.category.LAUNCHER"/>

			</intent-filter>

		</activity>

		<activity
			android:name=".CalActivity"
			android:label="Calibration"
			android:theme="@style/FivePointDark"/>

		<activity
			android:name=".SettingsActivity"
			android:label="Settings"
			android:theme="@style/FivePointDark"/>

		<activity
			android:name=".UnitEditActivity"
			android:label="Unit Editor"
			android:theme="@style/Theme.AppCompat.Dialog"/>

		<activity
			android:name=".HelpActivity"
			android:label="Help"
			android:theme="@style/FivePointDark"/>

		<activity
			android:name=".Contact"
			android:label="Contact"
			android:theme="@style/FivePointDark"/>

		<activity
			android:name=".DeviceGridActivity"
			android:label="Select Device"
			android:theme="@style/FivePointDark"/>

	</application>

</manifest>

